{
  "manifest_version": 2,

  "name": "WebCommand",
  "description": "Control your browser quickier than ever with only your keyboard",
  "version": "0.1",

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+P",
        "mac": "Command+Shift+P",
        "linux": "Ctrl+Shift+P"
        },
      "description": "Toggle WebCommand"
    }
  },

  "permissions": [
    "tabs",
    "browsingData",
    "http://*/*",
    "https://*/*"
  ],
  
  "browser_action": {
    "default_title": "WebCommand",
    "default_popup": "popup.html"
  }
}